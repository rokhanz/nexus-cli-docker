# Nexus Node Configuration Template
# Copy this file to .env and fill in your actual values

# Your Ethereum wallet address (must start with 0x)
WALLET_ADDRESS=

# Your unique node identifier
NODE_ID=

# Optional: Custom configuration directory (default: ~/.nexus)
# CONFIG_DIR=

# Optional: Docker network mode (default: host)
# NETWORK_MODE=host

# Optional: Enable debug mode (default: false)
# DEBUG=false
